<%= form_with(model: [@project, task]) do |form| %>
  <% if task.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :assigned_user_id, style: "display: block" %>
    <%= form.text_field :assigned_user_id %>
  </div>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :story_points, style: "display: block" %>
    <%= form.number_field :story_points %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.select :status, Task.statuses.keys.map { |s| [s.humanize, s] } %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
